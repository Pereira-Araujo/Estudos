<style>
    main{
        height:90vh;
        display:flex;
        justify-content: center;
        align-items:center;
        flex-direction: column;
    }

    form{
        width:18vw;
        height:35vh;
        border:1px solid black;
        display:flex;
        flex-direction:column;
        justify-content: space-between;
        align-items:center;
        border-radius:2%;
    }
   textarea{
     width:16vw;
     height:20vh;
   }
   .form__titulo{
    text-align:center;
    background:rgb(255, 209, 93);
    padding-bottom:0.5rem;
   }

   .form__botao{
     border:none;
     background:none;
     color:gray;

   }
